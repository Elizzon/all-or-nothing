<!DOCTYPE html>
<html>
  <head>
    <title>AllOrNothing</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  	<header>
 	
		<nav class="navbar navbar-toggleable-md navbar-light bg-faded">
		  <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
		    <span class="navbar-toggler-icon"></span>
		  </button>
		  	<%= link_to posts_path do %>
				<div  class="navbar-brand">HOME</div>
			<% end %> 
		  
		  <!-- 	<a class="navbar-brand" href= "#">HOME</a> -->
		  
		  
		  

		  <div class="collapse mynavigatemenu navbar-collapse" id="navbarNav">
		    <ul class="navbar-nav ">


				<li class="nav-item">
					<%= link_to new_post_path do %>
						<div class="nav-link create-new-post-in-menu">Create New Post</div>
					<% end %>	    
				</li>

				<li class="nav-item">
					<a class="nav-link" href="#">About us </a>
				</li>

		     
				<li class="nav-item">
					<%= link_to new_model_session_path do %>
						<div class="nav-link"> Sing In </div>
					<% end %>
				</li>

				<% if model_signed_in? %>
				
					<li class="nav-item">
						<%= link_to destroy_model_session_path, method: :delete do %>
							<div class="nav-link"> Sing Out </div>
						<% end %>
					</li>

				<% end %>

		    </ul>
	    	
		  </div>
		</nav>
 	
 	</header>
 	<div class="container my-container col-9">
	 	<div class="row justify-content-md-center">

	 		<%= yield %>

	 	</div>
 	</div>

 	 <footer >
 	 	<div class="footer-inform">
 	 		тут могла быть ваша реклама
 	 		
 	 	</div>
 	
 	</footer>

  </body>
</html>
