
<div class="col-12 text-center ">
	


	<% @posts.each do |post| %>
		
		
	<div class="some-post"><%= post.title %></div>

	<div class="image-for-post"><%= image_tag post.photo.url %></div>

	<div class="some-text"><%= post.text %></div>

	<div class="some-buttom"> <%= link_to post_path(post) do %>
		<div class="btn btn-default">show</div>
		<% end %>

		<% if model_signed_in? %>
			<%= link_to edit_post_path(post) do %>
			<div class="btn btn-default">Edit</div>
			<% end %>
		<% end %>

		<% if model_signed_in? %>
			<%= link_to post_path(post),
			  method: :delete,
			  data: { confirm: 'Are you sure?' } do %>
			  	<div class="btn btn-danger">Destroy</div>
			<% end %>
		<% end %>
	</div>

	<% end %>
</div>




